{
    "compilerOptions": {
        "lib": [
            "dom",
            "esnext"
        ],
        "skipLibCheck": true,
        "removeComments": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es6",
        "outDir": "./dist",
        "module": "es6",
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true
    },
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}